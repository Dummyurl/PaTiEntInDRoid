<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f1f1f1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/white"
            android:layout_height="wrap_content">

            <TextView
            android:id="@+id/subject"
            android:text="Subject"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/desc"
                android:textStyle="italic"
                android:text="Subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            </LinearLayout>


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_below="@+id/chat_date"
                android:id="@+id/chat_layout_friend"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:minWidth="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_alignParentLeft="true"
                android:layout_height="wrap_content">


                <!-- TXT-->
                <LinearLayout
                    android:layout_toRightOf="@+id/image_f"
                    android:id="@+id/chat_text_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_msg_you"
                    android:padding="6dp"
                    android:paddingBottom="6dp"
                    android:orientation="vertical">

                    <!-- TXT-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/doctor_msg"
                            android:padding="2dp"
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>



                    <TextView
                        android:id="@+id/doctor_msg_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_gravity="right"
                        />


                </LinearLayout>


            </RelativeLayout>


            <RelativeLayout
                android:layout_below="@+id/chat_date"
                android:id="@+id/chat_layout_me"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:minWidth="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="-6dp"
                android:layout_marginBottom="3dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_toLeftOf="@+id/my_layout"
                    android:id="@+id/my_layout_chat"
                    android:background="@drawable/bg_msg_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="6dp"
                    android:paddingBottom="6dp"
                    android:orientation="vertical">

                    <!-- TXT-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/my_msg"
                            android:padding="2dp"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                    </LinearLayout>



                    <TextView
                        android:id="@+id/my_msg_date"
                        android:textSize="12dp"
                        android:drawablePadding="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:layout_gravity="center|right"
                        />

                </LinearLayout>


            </RelativeLayout>



        </LinearLayout>




    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llreply"
        android:layout_alignParentBottom="true"
        android:background="#d1d1d1" >

        <RelativeLayout
            android:id="@+id/send_ll"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <ImageButton
                android:id="@+id/send_btn"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_send"
                android:background="@drawable/borderlineleft"
                android:text="Send" />


            <EditText
                android:id="@+id/msg_edit"
                android:hint="Your response..."
                android:background="@null"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:minLines="2"
                android:maxLines="6"
                android:inputType="textMultiLine"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_width="match_parent"
                >

            </EditText>

        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>